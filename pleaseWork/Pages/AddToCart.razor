@page "/added"

<MudDialog>
    <DialogContent>
        Added To Cart!
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit" Href="/search">Ok</MudButton>
    </DialogActions>
</MudDialog>


