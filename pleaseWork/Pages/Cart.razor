@page "/cart"

<MudToolBar Color="Color.Primary">
    <MudIconButton Icon="@Icons.Material.Outlined.MoreVert" Color="Color.Inherit" />
</MudToolBar>

        <div id="background">
            <MudPaper Elevation="10" Height="47px" Width="100%">
                <MudText Class="pt-2" Typo="Typo.h5">Your Order</MudText>
            </MudPaper>
        </div>

        <MudStack>
            <MudItem>
                <MudCard Height="180px" FullWidth="true">
                    <MudPaper Height="110px" Width="172px" />
                    <MudCardContent>
                        <MudText>Bananas</MudText>
                        <MudText Typo="Typo.body2">$3.99</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem>
                <MudCard Height="180px" FullWidth="true">
                    <MudPaper Height="110px" Width="172px" />
                    <MudCardContent>
                        <MudText>Apples</MudText>
                        <MudText Typo="Typo.body2">$3.99</MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudStack>

        <MudText Typo="Typo.h5" Class="d-inline align-start">Total</MudText>
        <MudText Typo="Typo.h5" Class="d-inline align-end">$23.56</MudText>
      


        <MudButton Class="mt-1" Variant="Variant.Filled" FullWidth="true" Color="Color.Primary" Href="/billing">Checkout</MudButton>


        @code {
            public string TextValue { get; set; }
        }
        <style>
            #background {
                align-content: center;
                border-radius: 0px 0px 0px 0px;
                text-align: center;
                position: relative;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
            }

            center {
                text-align: center
            }
        </style>
