@page "/cart"

<div id="background">
    <MudPaper Elevation="10" Height="47px" Width="100%">
        <MudText Class="pt-2" Typo="Typo.h5">Cart</MudText>
    </MudPaper>
</div>



<MudGrid Spacing="2" Class="mt-2" Justify="Justify.Center">
    <MudStack AlignItems="AlignItems.Start">
        <MudItem>
            <MudCard Elevation="10" Height="180px" Width="172px">
                <MudCardMedia Height="110" Image="https://i.imgur.com/osNh4Vm.png" />
