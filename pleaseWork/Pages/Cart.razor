@page "/cart"


<MudAppBar Color="Color.Secondary" Fixed="false">
    <MudIconButton Icon="@Icons.Filled.ArrowBack" Color="Color.Primary" Edge="Edge.Start" />
    <MudSpacer />
    <MudText Color="Color.Dark" Typo="Typo.h6">Your Order</MudText>
    <MudSpacer />
</MudAppBar>

<MudStack>



    <MudGrid Spacing="2" Class="mt-2" Justify="Justify.Center">
        <MudItem>
            <MudCard Height="180px" FullWidth="true">
                <MudPaper Height="110px" Width="172px" />
                <MudCardContent>
                    <MudText>Bananas</MudText>
                    <MudText Typo="Typo.body2">$3.99</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem>
            <MudCard Height="180px" FullWidth="true">
                <MudPaper Height="110px" Width="172px" />
                <MudCardContent>
                    <MudText>Apples</MudText>
                    <MudText Typo="Typo.body2">$3.99</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudStack>

<MudText Typo="Typo.h5" Class="d-inline align-start">Total</MudText>
<MudText Typo="Typo.h5" Class="d-inline align-end">$23.56</MudText>
      

<MudButton Class="mt-1" Variant="Variant.Filled" FullWidth="true" Color="Color.Primary" Href="/billing">Checkout</MudButton>


