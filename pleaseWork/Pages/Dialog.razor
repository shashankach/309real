@page "/dialog"

<MudDialog>
    <DialogContent>
        You will now be redirected to the Log In page. Please log in to verify your account.
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Secondary" OnClick="Submit" Href="/login">Ok</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}