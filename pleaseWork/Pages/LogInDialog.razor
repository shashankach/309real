@page "/log-in-dialog"

<MudDialog>
    <DialogContent>
        Wrong username or password. Try again or click Sign Up to create a new account.
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit" Href="/">Ok</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}
